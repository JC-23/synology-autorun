rm package.tgz
rm autorun-1.7.spk
echo "building package"
tar -czvvf package.tgz -C package/ autorun common rules udev -X tarexclude
echo " "
echo "building spk"
chmod 700 package.tgz
tar -cvvf autorun-1.7.spk INFO CHANGELOG LICENSE PACKAGE_ICON.PNG WIZARD_UIFILES scripts package.tgz -X tarexclude
rm package.tgz
chmod 777 autorun-1.7.spk
cp autorun-1.7.spk autorun-1.7-`date +%Y-%m-%d`-`date +%H-%M-%S`.spk